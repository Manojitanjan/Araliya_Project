    void AutoNum() {
        try {
            Connection con = DB.connect();
            ResultSet r3 = con.createStatement().executeQuery("select * from Category  ");
            boolean b = false;
            int id = 0;
            int y = 0;

            while (r3.next()) {
                b = true;
                id = Integer.parseInt(r3.getString("CategoryID"));

                if (id > y) {
                    y = id;

                }

            }
            if(b){
                jTextField2.setText(y+1+"");
            }
            else{
                jTextField2.setText("1");
            
            }

        } catch (Exception e) {
            e.printStackTrace();
        }

    }

