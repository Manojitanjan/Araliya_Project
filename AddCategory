    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton2ActionPerformed
        // TODO add your handling code here:
        try {
            Connection con = DB.connect();

            PreparedStatement p = con.prepareStatement("insert into Category values('" + jTextField2.getText() + "','" + jTextField3.getText() + "','" + jTextField4.getText() + "')");
            p.executeUpdate();
            p.close();

            JOptionPane.showMessageDialog(null, "Item Saved");
            jTextField2.setText("");
            jTextField3.setText("");
            jTextField4.setText("");
            AutoNum();
        } catch (Exception e) {
            e.printStackTrace();
        }


    }//GEN-LAST:event_jButton2ActionPerformed

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        // TODO add your handling code here:

        try {
            Connection con = DB.connect();
            PreparedStatement p2 = con.prepareStatement("delete from Category where CategoryID='" + jTextField2.getText() + "'");
            p2.executeUpdate();
            p2.close();
            JOptionPane.showMessageDialog(null, "Item deleted from category table");
            jTextField2.setText("");
            jTextField3.setText("");
            jTextField4.setText("");

        } catch (Exception e) {
            e.printStackTrace();
        }
    }//GEN-LAST:event_jButton1ActionPerformed

    private void jTextField2KeyReleased(java.awt.event.KeyEvent evt) {//GEN-FIRST:event_jTextField2KeyReleased
        // TODO add your handling code here:

        try {
            Connection con = DB.connect();
            ResultSet r = con.createStatement().executeQuery("select * from Category where CategoryID='" + jTextField2.getText() + "'");
            boolean b = false;
            while (r.next()) {
                b = true;
                String Name = r.getString("CategoryName");
                jTextField3.setText(Name);

                String Sub = r.getString("SubCategoryName");
                jTextField4.setText(Sub);

            }

            if (b) {

            } else {

                jTextField3.setText("");
                jTextField4.setText("");

            }
        } catch (Exception e) {
            e.printStackTrace();
        }
    }//GEN-LAST:event_jTextField2KeyReleased

